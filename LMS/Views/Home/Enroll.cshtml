@model DisplayCourses
@{
    ViewData["Title"] = "Course Page";
}
<title>Available Courses</title>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<style>
    body {
    background: linear-gradient(135deg, #6a11cb, #2575fc);
    color: white;
    }

    .course-container {
    max-width: 1500px;
    margin: auto;
    padding: 20px;
    }

    .course-card {
    width: 24rem; 
    background-color: rgba(255, 255, 255, 0.05);
    color: white;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    transition: transform 0.2s ease-in-out;
    }

    .course-card:hover {
    transform: scale(1.02);
    }

    .course-card img {
    height: 150px;
    object-fit: cover;
    }

    .card-body {
    text-align: center;
    }

    .enroll-btn {
    background-color: #ffcc00;
    color: black;
    font-weight: bold;
    border-radius: 20px;
    transition: background 0.3s ease-in-out;
    }

    .enroll-btn:hover {
    background-color: #ffdb4d;
    color: #000;
    }
</style>
<div class="course-container">
    <div class="m-5 w-50 mx-auto">
        <form class="d-flex search-box" role="search">
            <input class="form-control me-2 rounded-pill" type="search" id="s" name="s" value="@Model.s" placeholder="🔍 Search Courses (Title/Code/Teacher)" aria-label="Search">
            <button class="btn btn-warning btn-lg rounded-pill px-4" type="submit">Search</button>
            <a class="btn btn-warning btn-lg rounded-pill px-4 mx-2" type="button" href="/home/enroll">Clear</a>
        </form>
    </div>
    @if (!Model.Courses.Any())
    {
        <h3 class="text-center fw-bold mb-4">No Courses are available at the moment.</h3>
    }
    else{
    <h3 class="text-center fw-bold mb-4">🚀 All Available Courses</h3>
        <div class="d-flex flex-wrap justify-content-center">
            @foreach (var course in Model.Courses)
            {
                <div class="card course-card mx-3 mb-4">
                   @* will make the image settings later *@
                     <img src="" class="card-img-top" alt="book"> 
                    <div class="card-body">
                    <h4 class="card-title text-warning">@course.Code : @course?.Title?.ToString()</h4>
                        <h5 class="card-text">@course?.Description?.ToString()</h5>
                        <h5 class="card-text">Offered By: @course?.TeacherId</h5>
                        @if(User.IsInRole("Student")){
                        <a asp-controller="Enroll" asp-action="EnrollStudent" asp-route-courseId="@course?.Id" asp-route-TeacherId="@course?.TeacherId" class="btn enroll-btn px-4">Enroll Now</a>
                        }
                    </div>
                </div>
            }
        </div>
    }
    </div>
