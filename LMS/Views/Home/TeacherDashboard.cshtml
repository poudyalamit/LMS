@{
    ViewData["Title"] = "Teacher Dashboard";
}

<h2 class="text-center my-4">Teacher Dashboard</h2>

<div class="container d-flex justify-content-center gap-4 flex-wrap">
    <div class="card shadow text-center" style="height: 250px; width: 250px;">
        <div class="card-body d-flex flex-column justify-content-between">
            <div>
                <h5 class="card-title">Courses</h5>
                <p class="card-text">View and manage your offered courses.</p>
            </div>
            <a asp-controller="Courses" asp-action="Index" class="btn btn-warning mt-3">Go to Courses</a>
        </div>
    </div>

    <div class="card shadow text-center" style="height: 250px; width: 250px;">
        <div class="card-body d-flex flex-column justify-content-between">
            <div>
                <h5 class="card-title">Enrollments</h5>
                <p class="card-text">View student enrollments in your courses.</p>
            </div>
            <a asp-controller="Enroll" asp-action="TeacherCourseEnrollment" asp-route-teacherId="@User?.Identity?.Name" class="btn btn-warning mt-3">Go to Enrollments</a>
        </div>
    </div>
</div>
