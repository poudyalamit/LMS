@model IEnumerable<Enrollment>

@{
    ViewData["Title"] = "StudentDashboard";
}


<div class="d-flex justify-content-between align-items-center mb-3 px-4" style="margin-top: 6%">
    <a href="/home/index" class="btn btn-warning">
        ← Back
    </a>
    <h2 class="text-primary m-0">Courses Enrolled</h2>
    <a></a>
    <div class="d-flex flex-column gap-4">
        @foreach (var enrollment in Model)
        {
            <div class="card mx-auto shadow-lg border-0" style="max-width: 850px;">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@enrollment.Course.Code</h5>
                        @* <a class="btn btn-warning fw-bold" style="color: black; position: absolute; right: 10px; bottom: 10px;"> *@
                        @*     Details *@
                        @* </a> *@
                    </div>
                </div>
            </div>
        }
    </div>
</div>

