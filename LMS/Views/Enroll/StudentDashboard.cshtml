@model IEnumerable<Enrollment>

@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4" style="margin-top: 6%">
        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="Home" asp-action="StdInfo" class="btn btn-warning">
                ← Back
            </a>
        }
        else
        {
            <a asp-controller="Home" asp-action="Index" class="btn btn-warning">
                ← Back
            </a>

        }
        <h2 class="text-primary">Courses Enrolled</h2>
    </div>

    <div class="d-flex flex-wrap justify-content-center gap-4">
        @foreach (var enrollment in Model)
        {
            <div class="card shadow-lg border-0 position-relative" style="width: 500px; height: 200px;">
                <span class="position-absolute top-0 end-0 m-2 badge bg-secondary">
                    Enrollment ID: @enrollment.Id
                </span>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-dark fw-bold">
                        @enrollment.Course?.Code : @enrollment.Course?.Title
                    </h5>
                    <p class="card-text text-muted mb-5">
                        @enrollment.Course?.Description
                    </p>
                    @if (User.IsInRole("Student"))
                    {
                        <a asp-controller="Module"
                        asp-action="Index"
                        asp-route-courseId="@enrollment.Course?.Id"
                        asp-route-TeacherId="@enrollment.Course?.TeacherId"
                        class="btn btn-warning fw-bold position-absolute"
                        style="bottom: 15px; right: 15px;">
                            <i class="bi bi-arrow-right fs-5"></i>
                        </a>
                    }
                    else
                    {
                        <form id="deroll-form-@enrollment.Id"
                              asp-action="DeleteEnrollment"
                              asp-route-id="@enrollment.Id"
                              method="post"
                              style="display: inline;">
                            <button type="button"
                                    class="btn btn-danger btn-sm fw-bold position-absolute"
                                    style="bottom: 15px; right: 15px;"
                                    onclick="confirmDeroll(@enrollment.Id)"
                                    data-bs-toggle="tooltip">
                                <i class="bi bi-person-dash-fill fs-6"></i> Deroll
                            </button>
                        </form>
                    }
                </div>
            </div>

        }
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDeroll(enrollmentId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "Student will be unenrolled from this course.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, Deroll!'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById(`deroll-form-${enrollmentId}`).submit();
                }
            });
        }
    </script>
}
