@model IEnumerable<Enrollment>

@{
    ViewData["Title"] = "Teacher Course Enrollments";
    var grouped = Model.GroupBy(e => e.Course);
}

<div class="container mt-5" >
    <div class="d-flex justify-content-between align-items-center mb-4" style="margin-top: 6%">
        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="Home" asp-action="TchrInfo" class="btn btn-warning">← Back</a>
        }
        else
        {
            <a href="/home/index" class="btn btn-warning">← Back</a>
        }
        <h2 class="text-primary">Teacher & Course Enrollments</h2>
        <span></span>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center text-dark w-50 mt-4 mx-auto">
            No enrollments found for this teacher.
        </div>
    }
    else
    {
        @foreach (var courseGroup in grouped)
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-warning bg-opacity-25">
                    <strong>@courseGroup.Key.Code</strong>: @courseGroup.Key.Title
                </div>
                <div class="card-body bg-light p-3">
                    <table class="table table-bordered mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 5%;">S.N.</th>
                                <th style="width: 40%;">Student ID</th>
                                <th>Enrollment Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var enrollment in courseGroup.Select((e, i) => new { e, i }))
                            {
                                <tr>
                                    <td>@(enrollment.i + 1)</td>
                                    <td>@enrollment.e.StudentId</td>
                                    <td class="text-muted">@enrollment.e.EnrollmentDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }
</div>
