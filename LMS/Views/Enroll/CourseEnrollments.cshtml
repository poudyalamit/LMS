@model IEnumerable<Enrollment>

@{
    ViewData["Title"] = "Course Enrollments";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4" style="margin-top: 6%">
        <a asp-controller="Courses" asp-action="Index" class="btn btn-warning">
            ← Back to Courses
        </a>
        <h2 class="text-primary">Course Enrollments</h2>
        <span></span> 
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center text-dark">
            No students have enrolled in this course yet.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-borderless shadow-sm">
                <thead class="table-warning text-dark">
                    <tr>
                        <th scope="col">S.N.</th>
                        <th scope="col">Student ID</th>
                        <th scope="col">Enrollment Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var enrollment in Model.Select((value, index) => new { value, index }))
                    {
                        <tr>
                            <th scope="row">@(@enrollment.index + 1)</th>
                            <td>@enrollment.value.StudentId</td>
                            <td class="text">
                                @enrollment.value.EnrollmentDate.ToString("MMM dd, yyyy hh:mm tt")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
