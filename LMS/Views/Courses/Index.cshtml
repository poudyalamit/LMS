@model IEnumerable<Course>

@{
    ViewData["Title"] = "Courses by Teacher";
}

<div class="d-flex justify-content-between align-items-center mb-3 px-4" style="margin-top: 6%">
    <a href="/home/index" class="btn btn-warning">
        ← Back
    </a>
    <h2 class="text-primary m-0">Courses Offered</h2>
    <a asp-action="Create" class="btn btn-warning">
        <i class="bi bi-plus-lg"></i> Add Course
    </a>
</div>

<div class="d-flex flex-column align-items-center gap-4 px-3">
    @foreach (var course in Model)
    {
        <div class="card shadow-sm" style="max-width: 800px; width: 100%;">
            <div class="card-header bg-warning bg-opacity-25 fw-bold text-dark">
                @course.Code - @course.Title
            </div>
            <div class="card-body bg-light">
                <dl class="row mb-0">
                    <dt class="col-sm-3 text-muted">Description</dt>
                    <dd class="col-sm-9">@course.Description</dd>
                </dl>
            </div>
            <div class="card-footer bg-white d-flex justify-content-end">
                <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-warning btn-sm me-2">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <form asp-action="Delete" asp-route-id="@course.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this course?');">
                    <button type="submit" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-trash3-fill"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    }
</div>
