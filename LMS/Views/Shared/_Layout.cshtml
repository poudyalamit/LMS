<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kallu LMS - Online Learning Platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LMS.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.5/dist/sweetalert2.all.min.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm fixed-top solid-navbar mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-light" href="/home/index">Kallu LMS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/home/index">Home</a>
                        </li>
                        @if(User.IsInRole("Student")){
                            <li class="nav-item">
                                <a class="nav-link text-light font-weight-bold" asp-controller="Enroll" asp-action="StudentDashboard" asp-route-studentId="@User?.Identity?.Name">My Dashboard</a>
                            </li>
                        }
                        @if (User.IsInRole("Teacher"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light font-weight-bold" asp-controller="Home" asp-action="TeacherDashboard" asp-route-teacherId="@User?.Identity?.Name">My Dashboard</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light font-weight-bold" asp-controller="Home" asp-action="AdminDashboard">My Dashboard</a>
                            </li>
                        }
                        <li class="nav-item">
                        <a class="nav-link text-light" href="/home/privacy">Privacy</a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="custom-footer py-3">
        <div class="container text-center">
            <span class="fw-bold text-dark">
                &copy; 2025 - LMS -
                <a class="text-warning fw-bold text-decoration-none" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="/js/signalr/dist/browser/signalr.js"></script>
    <script src="/js/notification.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
